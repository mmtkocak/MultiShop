
<div class="col-lg-4">
    <form class="mb-30" method="post" asp-action="ConfirmDiscountCoupon" asp-controller="Discount">
        <div class="input-group">
            <input type="text" name="code" value="@ViewBag.code" class="form-control border-0 p-4" placeholder="İndirim Kodu" required>
            <div class="input-group-append">
                <button class="btn btn-primary">Kupon Uygula</button>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between">
                <h6>Toplam Ürün Fiyatı</h6>
                <h6>@ViewBag.total.ToString("C")</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h6 class="font-weight-medium">Kdv</h6>
                <h6 class="font-weight-medium">@ViewBag.tax.ToString("C")</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h6 class="font-weight-medium">
                    İndirim Oranı
                </h6>
                <h6 class="font-weight-medium">%@ViewBag.discountRate</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h6 class="font-weight-medium">
                    İndirimsiz Tutar
                </h6>
                <h6 class="font-weight-medium">@ViewBag.totalNewPriceWithDiscount.ToString("C")</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam</h5>
                <h5>@ViewBag.totalPriceWithTax.ToString("C")</h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
        </div>
    </div>
</div>