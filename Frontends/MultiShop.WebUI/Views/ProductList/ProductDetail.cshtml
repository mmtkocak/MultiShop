@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                <span class="breadcrumb-item active">ürün detayı</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ProdcutDetailImageSliderComponentPartial", new { id = ViewBag.x })
        @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial", new {id=ViewBag.x})
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Detayı</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgileri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (0)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_ProdutDetailDescriptionComponentPartial", new { id = ViewBag.x })
                    @await Component.InvokeAsync("_ProdutDetailInformationComponentPartial", new { id = ViewBag.x })
                    @await Component.InvokeAsync("_ProdutDetailReviewComponentPartial")
                </div>
            </div>
        </div>
    </div>
</div>