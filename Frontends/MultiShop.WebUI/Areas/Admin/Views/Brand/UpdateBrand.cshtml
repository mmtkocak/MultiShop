@model UpdateBrandDto
@{
    ViewData["Title"] = "Marka Güncelleme";
    ViewData["v1"] = "Anasayfa";
    ViewData["v2"] = "Markalar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="BrandId" />
                        <label>Marka Adı</label>
                        <input type="text" asp-for="BrandName" required class="form-control" />
                        <br />
                        <label>Marka Resmi</label>
                        <input type="text" asp-for="ImageUrl" required class="form-control" />
                        <br />
                        <button class="btn btn-primary">Marka Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>




