@model UpdateCommentDto
@{
    ViewData["Title"] = "Yorum Güncelleme";
    ViewData["v1"] = "Anasayfa";
    ViewData["v2"] = "Yorumlar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="UserCommentId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" asp-for="NameSurname" required class="form-control" />
                        <br />
                        <label>Kullanıcı Görsel</label>
                        <input type="text" asp-for="ImageUrl" required class="form-control" />
                        <br />
                        <label>Email Adresi</label>
                        <input type="text" asp-for="Email" required class="form-control" />
                        <br />
                        <label>Kullanıcı Puanı</label>
                        <input type="number" asp-for="Rating" required class="form-control" />
                        <br />
                        <label>Yorum Tarihi</label>
                        <input type="date" asp-for="CreatedDate" required class="form-control" />
                        <br />
                        <label>Yorum</label>
                        <textarea rows="3" asp-for="CommentDetail" required class="form-control"></textarea>
                        <br />
                        <button class="btn btn-primary">Yorum Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>