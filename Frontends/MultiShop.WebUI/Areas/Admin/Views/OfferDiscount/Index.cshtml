@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "İndirim İşlemleri";
    ViewData["v1"] = "Anasayfa";
    ViewData["v2"] = "İndirimler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Alt Başlık</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-primary">Güncelle</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Count >= 2)
                    {

                        <a href="" class="btn btn-danger btn-sm disabled">İkiden Fazla İndirim Teklifi Eklenemez!</a>


                    }

                    else

                    {

                        <a href="/Admin/OfferDiscount/CreateOfferDiscount" class="btn btn-success">Yeni Ekle</a>

                    }

                </div>
            </div>
        </div>
    </div>
</section>

